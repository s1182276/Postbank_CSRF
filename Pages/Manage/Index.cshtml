@page
@model Postbank.Pages.Manage.IndexModel

@{
    ViewData["Title"] = "Manage";
    var cookieValue = Request.Cookies["PostBankUserSession"];
}

<h1>Manage</h1>

<p>
    <a asp-page="Create">Create New</a>
    <br />
    <a asp-page="../Transactions/Index">Transacties</a>

</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BankUser[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BankUser[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BankUser[0].Password)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BankUser[0].SessionToken)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.BankUser) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SessionToken)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
